<?xml version="1.0" encoding="utf-8"?>

<!-- =========================================================
     activity_main.xml
     =========================================================

     기능 UI 구성

     1. TXT 파일 내용 미리보기 (스크롤 가능)
     2. 아이콘형 컨트롤 버튼 영역
        - 파일 선택
        - 재생
        - 일시정지
        - 정지
        - MP3 저장

     필요 drawable (Vector Asset로 생성 권장)
     ic_file.xml
     ic_play.xml
     ic_pause.xml
     ic_stop.xml
     ic_save.xml

     Android Studio
     New → Vector Asset → Material Icons 사용 추천

========================================================= -->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


    <!-- =====================================================
         텍스트 미리보기 영역 (스크롤 가능)
         ===================================================== -->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/previewTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여기에 텍스트 파일 내용이 표시됩니다"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:padding="12dp" />

    </ScrollView>


    <!-- =====================================================
         하단 버튼 패널 (아이콘형)
         ===================================================== -->

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- 파일 선택 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fileBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:contentDescription="파일 선택"
            app:icon="@drawable/ic_folder"
            app:iconSize="28dp" />


        <!-- 재생 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sendBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:contentDescription="재생"
            app:icon="@drawable/ic_play"
            app:iconSize="28dp" />


        <!-- 일시정지 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/pauseBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:contentDescription="일시정지"
            app:icon="@drawable/ic_pause"
            app:iconSize="28dp" />


        <!-- 정지 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stopBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:contentDescription="정지"
            app:icon="@drawable/ic_stop"
            app:iconSize="28dp" />


        <!-- MP3 저장 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveMp3Btn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:contentDescription="MP3 저장"
            app:icon="@drawable/ic_save"
            app:iconSize="28dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
